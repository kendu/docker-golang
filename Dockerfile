#
# The slightly upgraded golang container
#
#################################---INFO---#####################################

FROM golang:wheezy
MAINTAINER DevOps <devops@kendu.si>

################################################################################

#################################---ENV---######################################

ENV DEBIAN_FRONTEND noninteractive

################################################################################

################################---BUILD---#####################################

USER root
RUN apt-get update && apt-get upgrade -y; \
    apt-get -y install librsvg2-bin \
        pkg-config \
        libcairo2-dev; \
    apt-get clean

################################################################################
